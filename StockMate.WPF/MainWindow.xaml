<Window x:Class="StockMate.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMate.WPF" 
        
        
        xmlns:controls="clr-namespace:StockMate.WPF.Controls"
        mc:Ignorable="d"
      Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:NavigationBar Grid.Column="0" DataContext="{Binding Navigator}"/>


        <Grid Grid.Column="1" Background="White">
            <ContentControl Content="{Binding Navigator.CurrentViewModel}"></ContentControl>
        </Grid>
    </Grid>

</Window>
