<UserControl x:Class="StockMate.WPF.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockMate.WPF.Controls"
             xmlns:nav ="clr-namespace:StockMate.WPF.State.Navigation"
             mc:Ignorable="d" 
             Height="Auto" Width="150">

    <Grid Background="#8AA563">
        <!-- StackPanel dla menu bocznego -->
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Simple Trader" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10" />
            <Button Content="Home" Margin="10,5" Command="{Binding UpdateCurrentViewModelCommand}"  CommandParameter="{x:Static nav:ViewType.Home}"/>
            <Button Content="Portfolio" Margin="10,5" Command="{Binding UpdateCurrentViewModelCommand}"  CommandParameter="{x:Static nav:ViewType.Portfolio}"/>
            <Button Content="Buy" Margin="10,5" />
            <Button Content="Sell" Margin="10,5" />
        </StackPanel>
    </Grid>
</UserControl>
